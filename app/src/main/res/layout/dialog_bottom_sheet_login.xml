<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/radius_bottom_sheet"
    android:paddingHorizontal="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="다른 방법으로 로그인"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:drawableStart="@drawable/ic_action_my"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/login_btn_bottom_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/whitegrey"
        android:textStyle="bold"
        android:text="페이스북으로 시작하기" />

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:drawableStart="@drawable/ic_action_my"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/login_btn_bottom_naver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/whitegrey"
        android:textStyle="bold"
        android:text="네이버로 시작하기" />

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:drawableStart="@drawable/ic_action_my"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/login_btn_bottom_bonin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/whitegrey"
        android:textStyle="bold"
        android:text="본인인증으로 시작하기" />

</LinearLayout>
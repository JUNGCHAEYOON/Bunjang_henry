<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/category_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/category_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_arrowback"
                app:tint="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="카테고리"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/category_nsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_tb">
        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/category_tv_category0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/deepdeepgrey"/>
                <LinearLayout
                    android:id="@+id/category_ll_1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_arrow_right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/category_tv_category1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/deepdeepgrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/category_ll_2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_arrow_right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/category_tv_category2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/deepdeepgrey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/category_ll_3"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_arrow_right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/category_tv_category3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/deepdeepgrey"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop = "@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whitegrey"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>